{
  "name": "uhf-library-electron",
  "productName": "IUT UHF Library",
  "version": "1.0.0",
  "description": "IUT UHF Library driver software",
  "repository": {
    "url": "https://github.com/awesomelike/nfc-attendance-electron"
  },
  "main": ".webpack/main",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "echo \"No linting configured\""
  },
  "keywords": [],
  "author": {
    "name": "awesomelike",
    "email": "abdullaev.dev@gmail.com"
  },
  "license": "MIT",
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "./src/assets/icons/Icon.ico",
        "asar": true
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "IUTUHFReader",
            "authors": "Azamat Abdullaev",
            "copyright": "Azamat Abdullaev, 2020",
            "loadingGif": "./src/assets/icons/IUT.gif"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ],
      "publishers": [
        {
          "name": "@electron-forge/publisher-github",
          "config": {
            "repository": {
              "owner": "awesomelike",
              "name": "uhf-reader-electron"
            }
          }
        }
      ],
      "plugins": [
        [
          "@electron-forge/plugin-webpack",
          {
            "mainConfig": "./webpack.main.config.js",
            "renderer": {
              "config": "./webpack.renderer.config.js",
              "entryPoints": [
                {
                  "html": "./src/index.html",
                  "js": "./src/renderer.js",
                  "name": "main_window"
                }
              ]
            }
          }
        ]
      ]
    }
  },
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@babel/preset-react": "^7.12.10",
    "@electron-forge/cli": "^6.0.0-beta.54",
    "@electron-forge/maker-deb": "^6.0.0-beta.54",
    "@electron-forge/maker-rpm": "^6.0.0-beta.54",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.54",
    "@electron-forge/maker-wix": "^6.0.0-beta.54",
    "@electron-forge/maker-zip": "^6.0.0-beta.54",
    "@electron-forge/plugin-webpack": "^6.0.0-beta.54",
    "@electron-forge/publisher-github": "^6.0.0-beta.54",
    "@marshallofsound/webpack-asset-relocator-loader": "^0.5.0",
    "babel-loader": "^8.2.2",
    "copy-webpack-plugin": "^6.2.1",
    "css-loader": "^4.3.0",
    "electron": "11.2.1",
    "eslint": "^7.18.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "exe-icon-extractor": "^1.0.8",
    "file-loader": "^6.2.0",
    "node-loader": "^1.0.2",
    "style-loader": "^1.3.0"
  },
  "dependencies": {
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "debug": "^4.3.1",
    "dotenv": "^8.2.0",
    "electron-log": "^4.3.1",
    "electron-squirrel-startup": "^1.0.0",
    "express": "^4.17.1",
    "http-errors": "^1.8.0",
    "ip": "^1.1.5",
    "ms": "^2.1.3",
    "node-notifier": "^9.0.0",
    "react": "^17.0.1",
    "react-desktop": "^0.3.9",
    "react-dom": "^17.0.1",
    "react-uwp": "^1.3.3",
    "socket.io": "^2.4.0",
    "update-electron-app": "^2.0.1",
    "validator": "^13.5.2"
  }
}
